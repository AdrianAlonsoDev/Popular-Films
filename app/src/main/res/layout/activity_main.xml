<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/extra"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:adjustViewBounds="true"
        android:alpha="0.5"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="w,"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="@string/titulo"
            android:textColor="@color/blanco"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/tags"
            app:layout_constraintTop_toBottomOf="@+id/tags" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_marginStart="16dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/portadados" />

        <TextView
            android:id="@+id/tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/tags"
            android:textColor="@color/primario"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/pg"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/botonrojo"
            android:fontFamily="sans-serif-black"
            android:text="PG +18"
            android:textColor="@color/rojo"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/titulo"
            app:layout_constraintTop_toBottomOf="@+id/titulo" />

        <android.widget.Button
            android:id="@+id/cc"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/botonpg"
            android:fontFamily="sans-serif-black"
            android:text="CC"
            android:textColor="@color/grisClaro"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/pg"
            app:layout_constraintTop_toTopOf="@+id/pg" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:numStars="5"
            android:rating="5"
            android:scaleX="0.3"
            android:scaleY="0.3"
            android:theme="@style/RatingBar"
            app:layout_constraintEnd_toEndOf="@+id/cc"
            app:layout_constraintStart_toStartOf="@+id/pg"
            app:layout_constraintTop_toBottomOf="@+id/pg" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/descAndButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/descripcionTexto"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/descripcion"
            android:textColor="@color/grisClaro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/comprarBoton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:background="@drawable/botonamarillo"
            android:text="@string/rent"
            android:textColor="@color/amarillo"
            app:layout_constraintEnd_toEndOf="@+id/descripcionTexto"
            app:layout_constraintTop_toTopOf="@+id/alquilarBoton" />

        <android.widget.Button
            android:id="@+id/alquilarBoton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@color/amarillo"
            android:text="@string/buy"
            app:layout_constraintStart_toStartOf="@+id/descripcionTexto"
            app:layout_constraintTop_toBottomOf="@+id/descripcionTexto" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>